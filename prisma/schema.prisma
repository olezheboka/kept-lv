generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  role         Role     @default(ADMIN)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("users")
}

model Party {
  id          String       @id @default(cuid())
  name        Json         // { lv: "", en: "", ru: "" }
  slug        String       @unique
  color       String       // hex color
  logoUrl     String?
  politicians Politician[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("parties")
}

model Politician {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  imageUrl  String?
  bio       Json?     // { lv: "", en: "", ru: "" }
  partyId   String
  party     Party     @relation(fields: [partyId], references: [id])
  promises  Promise[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("politicians")
}

model Category {
  id        String    @id @default(cuid())
  name      Json      // { lv: "", en: "", ru: "" }
  slug      String    @unique
  color     String    // tailwind gradient classes
  promises  Promise[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("categories")
}

model Promise {
  id            String        @id @default(cuid())
  text          Json          // { lv: "", en: "", ru: "" }
  status        PromiseStatus @default(IN_PROGRESS)
  explanation   Json?         // { lv: "", en: "", ru: "" }
  dateOfPromise DateTime
  politicianId  String
  politician    Politician    @relation(fields: [politicianId], references: [id])
  categoryId    String
  category      Category      @relation(fields: [categoryId], references: [id])
  sources       Source[]
  evidence      Evidence[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@map("promises")
}

model Source {
  id          String     @id @default(cuid())
  type        SourceType
  url         String
  title       Json?      // { lv: "", en: "", ru: "" }
  description Json?      // { lv: "", en: "", ru: "" }
  promiseId   String
  promise     Promise    @relation(fields: [promiseId], references: [id], onDelete: Cascade)
  createdAt   DateTime   @default(now())

  @@map("sources")
}

model Evidence {
  id          String       @id @default(cuid())
  type        EvidenceType
  url         String
  description Json?        // { lv: "", en: "", ru: "" }
  promiseId   String
  promise     Promise      @relation(fields: [promiseId], references: [id], onDelete: Cascade)
  createdAt   DateTime     @default(now())

  @@map("evidence")
}

enum Role {
  ADMIN
  EDITOR
}

enum PromiseStatus {
  KEPT
  NOT_KEPT
  IN_PROGRESS
  ABANDONED
  PARTIAL
}

enum SourceType {
  VIDEO
  ARTICLE
  DOCUMENT
  SOCIAL_MEDIA
  INTERVIEW
}

enum EvidenceType {
  NEWS_ARTICLE
  OFFICIAL_DOCUMENT
  VIDEO
  STATISTICS
  OTHER
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  role         Role     @default(ADMIN)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastLogin    DateTime?

  @@map("users")
}

model Party {
  id          String       @id @default(cuid())
  name        String
  description String?
  slug        String       @unique
  logoUrl     String?
  websiteUrl  String?
  isCoalition Boolean      @default(false)
  politicians Politician[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("parties")
}

model Politician {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  imageUrl  String?
  role      String?
  bio       String?
  education String?
  isActive  Boolean   @default(true)
  partyId   String?
  party     Party?    @relation(fields: [partyId], references: [id])
  promises  Promise[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("politicians")
}

model Category {
  id        String    @id @default(cuid())
  name      String
  description String?
  slug        String    @unique
  imageUrl    String?
  promises  Promise[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("categories")
}

model Promise {
  id              String        @id @default(cuid())
  title           String
  slug            String?       @unique
  description     String?
  status          PromiseStatus @default(IN_PROGRESS)
  explanation     String?
  tags            String[]      @default([])
  dateOfPromise   DateTime
  statusUpdatedAt DateTime?
  politicianId    String
  politician      Politician    @relation(fields: [politicianId], references: [id])
  categoryId      String
  category        Category      @relation(fields: [categoryId], references: [id])
  sources         Source[]
  evidence        Evidence[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@map("promises")
}

model Source {
  id          String     @id @default(cuid())
  type        SourceType
  url         String
  title       String?
  description String?
  promiseId   String
  promise     Promise    @relation(fields: [promiseId], references: [id], onDelete: Cascade)
  createdAt   DateTime   @default(now())

  @@map("sources")
}

model Evidence {
  id          String       @id @default(cuid())
  type        EvidenceType
  url         String
  description String?
  promiseId   String
  promise     Promise      @relation(fields: [promiseId], references: [id], onDelete: Cascade)
  createdAt   DateTime     @default(now())

  @@map("evidence")
}

enum Role {
  ADMIN
  EDITOR
}

enum PromiseStatus {
  KEPT
  NOT_KEPT
  IN_PROGRESS
  ABANDONED
  PARTIAL
  NOT_RATED
}

enum SourceType {
  VIDEO
  ARTICLE
  DOCUMENT
  SOCIAL_MEDIA
  INTERVIEW
}

enum EvidenceType {
  NEWS_ARTICLE
  OFFICIAL_DOCUMENT
  VIDEO
  STATISTICS
  OTHER
}

model SystemConfig {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("system_config")
}
